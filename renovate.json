{   
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "mergeConfidence:all-badges",
      "config:recommended"
    ],
    "enabledManagers": [
      "pip-compile"
    ],
    "pip-compile": {
      "fileMatch": ["(^|/)requirements\\.in$"]
    },
    "vulnerabilityAlerts": {
      "enabled": true
    }
}
